.<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <style type="text/css">
      .box{width: 125px;} 
      .red{color:red;}
      span{
        width: 250px;
      }
      ul {
  list-style-type: none;
}
li{
  list-style-type: none;
}
th, td {
    padding: 15px;
    text-align: left;
}
table {
    border-collapse: collapse;
}

table, th, td {
    border: 1px solid black;
}
textarea, input, input[type], .uneditable-input{
  border-color: rgba(229, 103, 23, 0.0);
}
textarea:focus, input:focus, input[type]:focus, .uneditable-input:focus {   
    border-color: rgba(229, 103, 23, 0.8);
    box-shadow: 0 1px 1px rgba(229, 103, 23, 0.075) inset, 0 0 8px rgba(229, 103, 23, 0.6);
    outline: 0 none;
}
.notshow{display: none;}

  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Mon Application</title>
</head>
<body>
  <h1>Carnet d'adresse 6</h1>
  <table>
  <ul class="adresse">
    <tr><th class="box tab">Nom    <a href="http://localhost:8081/up/nom"><i id="upp" class="fa fa-angle-double-up" aria-hidden="true"></i></a> 
    <a href="http://localhost:8081/down/nom"><i id="downn" class="fa fa-angle-double-down" aria-hidden="true"></i></a></th>
    <th class="box tab">Prenom    <a href="http://localhost:8081/up/prenom"><i id="upp" class="fa fa-angle-double-up" aria-hidden="true"></i></a> 
    <a href="http://localhost:8081/down/prenom"><i id="downn" class="fa fa-angle-double-down" aria-hidden="true"></i></a></th>
    <th class="box tab">Telephone    <a href="http://localhost:8081/up/telephone"><i id="upp" class="fa fa-angle-double-up" aria-hidden="true"></i></a> 
    <a href="http://localhost:8081/down/telephone"><i id="downn" class="fa fa-angle-double-down" aria-hidden="true"></i></a></th>
    <th class="box tab">Adresse    <a href="http://localhost:8081/up/adresse"><i id="upp" class="fa fa-angle-double-up" aria-hidden="true"></i></a> 
    <a href="http://localhost:8081/down/codepostal"><i id="downn" class="fa fa-angle-double-down" aria-hidden="true"></i></a></th>
    <th class="box tab">Codepostal    <a href="http://localhost:8081/up/codepostal"><i id="upp" class="fa fa-angle-double-up" aria-hidden="true"></i></a> 
    <a href="http://localhost:8081/down"><i id="downn" class="fa fa-angle-double-down" aria-hidden="true"></i></a></th>
    <th class="box tab">Id</th>
    <th class="box tab">
    <button id="toggleClass"><i class="fa fa-plus-square-o" aria-hidden="true"></i></button>


         </th>

    <tr id="cible" class="notshow"><form action="/adresse" method="POST">
    <td><input class="box" type="text" placeholder="nom" name="nom"></td>
    <td><input class="box" type="text" placeholder="prenom" name="prenom"></td>
    <td><input class="box" type="text" placeholder="Telephone" name="telephone"></td>
    <td><input class="box" type="text" placeholder="adresse" name="adresse"></td>
    <td><input class="box" type="text" placeholder="codepostal" name="codepostal"></td>
    <td><span></span></td>
    <td><button type="submit">Ajouter</button></td>
  </form></tr>
  <% for(var i=0; i<adresse.length; i++) {%>
    <li class="client">
      <tr id="<%= adresse[i]._id %>"><form action="/mod/<%= adresse[i]._id %>" method="POST">
        <td><input class="box" type="text" placeholder="nom" name="nom" value="<%= adresse[i].nom %>"></td>
        <td><input class="box" type="text" placeholder="prenom" name="prenom" value="<%= adresse[i].prenom %>"></td>
        <td><input class="box" type="text" placeholder="Telephone" name="telephone" value="<%= adresse[i].telephone %>"></td>
        <td><input class="box" type="text" placeholder="adresse" name="adresse" value="<%= adresse[i].adresse %>"></td>
        <td><input class="box" type="text" placeholder="codepostal" name="codepostal" value="<%= adresse[i].codepostal %>"></td>
        <td><span><%= adresse[i]._id %></span></td>
        <td><button id="mod" type="submit"><i class="fa fa-file green" aria-hidden="true"></i></button>
        <span><a href="http://localhost:8081/detruire/<%= adresse[i]._id %>"><i class="fa fa-trash-o red" aria-hidden="true"></i></a></span></td>
      </form>
      </tr>



    </li>
  <% } %>
  </ul>
  </table>

</body>
<script type="text/javascript">
document.getElementById("toggleClass").onclick = function(){document.getElementById('cible').classList.toggle("notshow");};
</script>
</html>